!SukiaDialog class methodsFor: 'multiple choice dialogs'!

choose: messageString for: aVisualOrNil

	^self dialogSupplier
		choose: messageString
		labels: (Array with: 'confirmar' with: 'rechazar' with: 'duda' with: 'cancelar')
		values: #(#confirm #reject #doubt #cancel)
		default: #cancel
		for: aVisualOrNil!

choose: messageString fromList: list values: listValues lines: maxLines for: aVisualOrNil

	^self dialogSupplier
		choose: messageString withCRs
		fromList: list
		values: listValues
		buttons: #('Rechazar' 'Duda')
		values: #(#reject #doubt) 
		lines: maxLines
		cancel: [#cancel]
		for: aVisualOrNil!

confirm: messageString initialAnswer: aBoolean
	"Ask the user a question, with a true/false answer. Return the response."

	"Dialog confirm: 'Are you tired yet?' initialAnswer: false.
	Dialog confirm: 'Are you completely sure?' initialAnswer: true"

	^self
		choose: messageString withCRs
		labels: #('si' 'no')
		values: #(true false)
		default: aBoolean! !

!SukiaDialog class methodsFor: 'fill In the blank dialogs'!

request: messageString initialAnswer: aString for: aVisualOrNil 

	^self dialogSupplier
		request: messageString withCRs
		initialAnswer: aString
		onCancel: [#cancel]
		for: aVisualOrNil! !

